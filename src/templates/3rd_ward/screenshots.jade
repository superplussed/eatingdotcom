
.grid-block
  figure.detail(ng-include="'templates/' + site.nameUnderscore + '/article.html'")

.grid-block
  figure
    .info
      .site-name {{site.name}}
      .role {{site.role}}
      .date-range {{site.dateRange}}
      
.grid-block
  figure(ng-include="'templates/tech_box.html'")

.grid-block
  figure
    a.fancybox(rel='3rd Ward', href="/images/3w-home.png")
      img(ng-src="/images/3w-home.png")
    figcaption
      .title A slice of the home page.

.grid-block
  figure
    a.fancybox(rel='3rd Ward', href="/images/3w-admin.png")
      img(ng-src="/images/3w-admin.png")
    figcaption
      .title The footer of an admin page.
      .description An illustration of the breadth of functionality.

.grid-block
  figure
    a.fancybox(rel='3rd Ward', href="/images/3rd_ward_2_500w.png")
      img(ng-src="/images/3rd_ward_2_500w.png")
    figcaption
      .title A course page.
      .description Offers the ability to switch to other date and times dynamically from the sidebar.

.grid-block(last-block="true")
  figure
    a.fancybox(rel='3rd Ward', href="/images/3w-cart.png")
      img(ng-src="/images/3w-cart.png")
    figcaption
      .title The shopping cart
      .description Offered detailed breakdowns on cart totals, since we offered a wide array of discounting and memberships.

